<h1>BURGERS</h1>

<h2>BURGERS</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>BURGERS</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>ADD A BURGER</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">BURGER NAME:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> BURGERS!<br>
    <input type="radio" name="sleepy" value="0"> BURGERS
  </div>

  <button type="submit">DEVOUR IT!</button>
</form>
