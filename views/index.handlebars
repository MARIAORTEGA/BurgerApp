
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">EAT A BURGER!</h1>
    <p class="lead">please add a burger :)</p>
  </div>
</div>

 {{!--burgers moved to this list after devour button clicked  --}}
<ul>
  {{#each burger_name}}
    {{#unless newName}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

  {{!--burgers with devour button  --}}
<ul>
  {{#each burger_name}}
    {{#if newName}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>ADD A BURGER</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">SUBMIT</button>
</form>
